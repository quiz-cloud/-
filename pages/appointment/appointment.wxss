/* pages/appointment/appointment.wxss */
.page {
	background: #fbf4e6;
	min-height: 100vh;
	padding-bottom: 80rpx;
}

.banner {
	background: #f7b400;
	padding: 24rpx 24rpx 30rpx;
	text-align: center;
}

.banner-title {
	color: #fff;
	font-size: 36rpx;
	font-weight: 700;
	letter-spacing: 2rpx;
}

.category-row {
	display: flex;
	gap: 18rpx;
	padding: 24rpx;
	background: #fff7e7;
}

.category-pill {
	padding: 14rpx 28rpx;
	border-radius: 40rpx;
	border: 2rpx solid #f7b400;
	color: #f7b400;
	font-size: 26rpx;
	font-weight: 600;
	background: #fff;
}

.category-pill.is-active {
	background: #f7b400;
	color: #fff;
}

.filter-row {
	display: flex;
	justify-content: center;
	padding: 8rpx 24rpx 20rpx;
	background: #fff7e7;
}

.device-picker {
	color: #666;
	font-size: 26rpx;
}

.picker-content {
	display: flex;
	align-items: center;
	gap: 10rpx;
}

.picker-arrow {
	font-size: 22rpx;
	color: #999;
}

.section {
	padding: 12rpx 24rpx 10rpx;
	background: #fff7e7;
}

.section-title {
	color: #3d5bf7;
	font-size: 28rpx;
	font-weight: 700;
}

.date-row {
	display: flex;
	align-items: center;
	gap: 12rpx;
	margin-top: 16rpx;
}

.date-arrow {
	font-size: 32rpx;
	color: #aaa;
	padding: 0 4rpx;
}

.date-card {
	width: 92rpx;
	height: 110rpx;
	border-radius: 16rpx;
	background: #fff;
	color: #333;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 26rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.date-card.is-active {
	background: #3d5bf7;
	color: #fff;
}

.date-num {
	font-size: 28rpx;
	font-weight: 700;
}

.date-day {
	font-size: 22rpx;
	margin-top: 6rpx;
}

.machine-list {
	padding: 10rpx 24rpx 0;
}

.machine-card {
	background: #f7ebd3;
	border-radius: 18rpx;
	padding: 18rpx;
	display: flex;
	gap: 16rpx;
	margin-bottom: 18rpx;
}

.machine-image {
	width: 150rpx;
	height: 110rpx;
	background: #fff;
	border-radius: 12rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #999;
	font-size: 22rpx;
}

.machine-info {
	flex: 1;
}

.machine-title-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 12rpx;
}

.machine-name {
	font-size: 28rpx;
	font-weight: 700;
	color: #2a2a2a;
}

.reserve-btn {
	background: #f7b400;
	color: #fff;
	font-size: 22rpx;
	padding: 6rpx 18rpx;
	border-radius: 20rpx;
	font-weight: 700;
}

.time-bar {
	display: flex;
	gap: 6rpx;
	margin-bottom: 6rpx;
}

.time-slot {
	flex: 1;
	height: 18rpx;
	border-radius: 8rpx;
	background: #d9d9d9;
}

.time-slot.free {
	background: #b8d983;
}

.time-slot.busy {
	background: #cc4c54;
}

.time-slot.mid {
	background: #f2b01e;
}

.time-scale {
	display: flex;
	justify-content: space-between;
	color: #555;
	font-size: 20rpx;
}

.time-label {
	flex: 1;
	text-align: center;
}

.my-booking {
	margin: 20rpx 24rpx 0;
	background: #fff;
	border-radius: 30rpx;
	padding: 18rpx;
	box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.my-title {
	display: block;
	text-align: center;
	color: #3d5bf7;
	font-size: 32rpx;
	font-weight: 700;
	margin-bottom: 16rpx;
}

.my-card {
	background: #fff;
	border-radius: 20rpx;
	padding: 18rpx;
	border: 2rpx solid #f2e6d0;
}

.my-info {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10rpx;
}

.my-device {
	font-size: 26rpx;
	font-weight: 700;
	color: #333;
}

.my-room {
	display: flex;
	align-items: center;
	gap: 8rpx;
	color: #3d5bf7;
	font-size: 24rpx;
	font-weight: 600;
}

.room-dot {
	width: 16rpx;
	height: 16rpx;
	border-radius: 50%;
	background: #3d5bf7;
}

.my-time {
	display: flex;
	justify-content: space-between;
	font-size: 24rpx;
	color: #333;
	margin-bottom: 14rpx;
}

.my-actions {
	display: flex;
	justify-content: flex-end;
	gap: 16rpx;
}

.my-btn {
	background: #f7b400;
	color: #fff;
	font-size: 22rpx;
	padding: 8rpx 18rpx;
	border-radius: 20rpx;
	font-weight: 700;
}

.my-btn.outline {
	background: #fff;
	color: #f7b400;
	border: 2rpx solid #f7b400;
}